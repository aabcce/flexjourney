<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/halo" width="100%" height="100%" 
		 xmlns:view="journey.view.*" xmlns:user="journey.view.user.*" 
		 xmlns:journey="journey.view.journey.*" enterState="group1_enterStateHandler(event)">
	<s:layout>
 		<s:BasicLayout/>
 	</s:layout>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			import journey.model.ModelLocator;
			
			[Bindable]
			private var model:ModelLocator = ModelLocator.getInstance();

			protected function group1_enterStateHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				tab1.selectedIndex = 0;
				dashBoard1.loadPartyList(null);
			}

		]]>
	</fx:Script>
	<s:Group>
		<s:layout>
			<s:HorizontalLayout>
				
			</s:HorizontalLayout>
		</s:layout>
		<mx:Image source="@Embed(source='../../assets/logo.gif')" width="160" height="120">
			
		</mx:Image>
		<user:StatusTray>
			
		</user:StatusTray>
	</s:Group>
	<mx:TabNavigator id="tab1" width="100%" height="100%" top="120">
		<journey:DashBoard id="dashBoard1" label="@Resource(key='Journey.TabNavigator.DashBoard',bundle='view')">
			
		</journey:DashBoard>
		<mx:Canvas label="@Resource(key='Journey.TabNavigator.AttendBoard',bundle='view')" 
				   width="100%" height="100%" enabled="{model.currParty != null}">
			<journey:AttendBoard width="90%" height="90%">
				
			</journey:AttendBoard>
		</mx:Canvas>

		<journey:ChatBoard label="@Resource(key='Journey.TabNavigator.ChatBoard',bundle='view')" enabled="{model.currParty != null}">
			
		</journey:ChatBoard>
		<mx:Canvas label="@Resource(key='Journey.TabNavigator.ShareBoard',bundle='view')" 
				   width="100%" height="100%" enabled="{model.currParty != null}">
			<journey:ShareBoard width="90%" height="90%">
				
			</journey:ShareBoard>
		</mx:Canvas>
	</mx:TabNavigator>
</s:Group>
