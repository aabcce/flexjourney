<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/halo" width="100%" height="100%" xmlns:view="journey.view.*" xmlns:user="journey.view.user.*" xmlns:journey="journey.view.journey.*">
	<s:layout>
 		<s:BasicLayout/>
 	</s:layout>
	<fx:Script>
		<![CDATA[
			import journey.model.ModelLocator;
			
			[Bindable]
			private var model:ModelLocator = ModelLocator.getInstance();
		]]>
	</fx:Script>
	<s:Group>
		<s:layout>
			<s:HorizontalLayout>
				
			</s:HorizontalLayout>
		</s:layout>
		<mx:Image source="@Embed(source='../../assets/logo.gif')" width="160" height="120">
			
		</mx:Image>
		<user:StatusTray>
			
		</user:StatusTray>
	</s:Group>
	<mx:TabNavigator width="100%" height="100%" top="120">
		<mx:Canvas label="@Resource(key='Journey.TabNavigator.DashBoard',bundle='view')" width="100%" height="100%">
			<journey:DashBoard width="90%" height="90%">
				
			</journey:DashBoard>
		</mx:Canvas>
		<mx:Canvas label="@Resource(key='Journey.TabNavigator.AttendBoard',bundle='view')" 
				   width="100%" height="100%" enabled="{model.currParty != null}">
		</mx:Canvas>
		<mx:Canvas label="@Resource(key='Journey.TabNavigator.ChatBoard',bundle='view')" 
				   width="100%" height="100%" enabled="{model.currParty != null}">
			
		</mx:Canvas>
		<mx:Canvas label="@Resource(key='Journey.TabNavigator.ShareBoard',bundle='view')" 
				   width="100%" height="100%" enabled="{model.currParty != null}">
		</mx:Canvas>
	</mx:TabNavigator>
</s:Group>
